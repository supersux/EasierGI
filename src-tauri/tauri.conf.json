{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "easiergi",
    "version": "0.0.1"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true
      },
      "app": {
        "all": true,
        "hide": true,
        "show": true
      },
      "clipboard": {
        "all": true,
        "readText": true,
        "writeText": true
      },
      "dialog": {
        "message": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "org.xzylab.sux",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "label": "main",
        "url": "/windows/main.html",
        "fullscreen": false,
        "resizable": true,
        "title": "EasierGI âˆ™ 0.0.1",
        "minWidth": 800,
        "minHeight": 600,
        "fileDropEnabled": false,
        "decorations": true,
        "visible": true
      },
      {
        "label": "login",
        "url": "/windows/login.html",
        "resizable": false,
        "title": "login",
        "width": 280,
        "height": 400,
        "center": false,
        "fileDropEnabled": false,
        "decorations": false,
        "transparent": true
      }
    ]
  }
}
